{
			"$schema": "http://json-schema.org/draft-04/schema#",
			"title": "Jira broker",
			"description": "Broker for Jira projects",
			"longDescription": "Get the most out of agile development by using JIRA to manage your project.",
			"type": "object",
			"parameters": {
				"properties": {
					"type": {
						"title": "JIRA type",
						"type": "string",
						"enum": [
							"new",
							"existing"
						]
					},
					"project_key": {
						"title": "JIRA project key",
						"type": "string"
					},
					"project_name": {
						"title": "JIRA project name",
						"type": "string"
					},
					"project_admin": {
						"title": "JIRA project lead's user name",
						"type": "string"
					},
					"api_url": {
						"title": "JIRA base API URL",
						"description": "Type the base API URL for your JIRA instance. To find that value, from the header of your JIRA instance, click the **Administration** icon, which looks like a gear, and then click **System**.",
						"type": "string"
					},
					"username": {
						"title": "JIRA administrator's user name",
						"type": "string"
					},
					"password": {
						"title": "JIRA administrator's password",
						"type": "password"
					}
				},
				"form": [{
					"type": "validator",
					"url": "/devops/setup/jira-helper/jira_exists_helper.html"
				}, {
					"type": "selectfieldset",
					"key": "type",
					"titleMap": {
						"new": "New",
						"existing": "Existing"
					},
					"items": [
						{
							"type": "section",
							"description": "Create a JIRA project.",
							"items": [
								"project_key",
								"project_name",
								"api_url",
								"project_admin",
								"username",
								"password"
							]
						}, {
							"type": "section",
							"description": "Connect to a JIRA project.",
							"items": [
								"project_key",
								"api_url",
								"username",
								"password"
							]
						}
					]
				}],
				"required": ["type", "project_key", "api_url"]
			}
}
